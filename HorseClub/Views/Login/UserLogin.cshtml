@model HorseClub.Models.Login


@{
    ViewData["Name"] = "UserLogin";
}

@{ Layout = "_Layout"; }
<br />
<h1>User Login</h1>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="UserLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginUser" class="control-label"></label>
                <input asp-for="LoginUser" class="form-control border" />
                <span asp-validation-for="LoginUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control border" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-info" />
                <a asp-action="Create" class="btn btn-info">Create a Account</a>
            </div>
        </form>
    </div>
</div>


